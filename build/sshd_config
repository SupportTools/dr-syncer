# Basic SSH configuration
Port 2222
Protocol 2
HostKey /etc/ssh/host_keys/ssh_host_rsa_key
HostKey /etc/ssh/host_keys/ssh_host_ecdsa_key
HostKey /etc/ssh/host_keys/ssh_host_ed25519_key

# Authentication
PubkeyAuthentication yes
PasswordAuthentication no
PermitEmptyPasswords no
ChallengeResponseAuthentication no

# Authorized keys - check both agent keys and pre-provisioned rsync keys
AuthorizedKeysFile /etc/ssh/keys/authorized_keys /etc/ssh/keys/rsync_authorized_keys

# Security
PermitRootLogin yes
X11Forwarding no
AllowTcpForwarding yes
AllowAgentForwarding no
PermitTunnel no
MaxAuthTries 3

# Logging
SyslogFacility AUTH
LogLevel INFO

# SSH proxy configuration
AllowUsers root syncer
GatewayPorts yes
StreamLocalBindUnlink yes

# Environment
AcceptEnv LANG LC_*

# Idle timeout
ClientAliveInterval 300
ClientAliveCountMax 2
